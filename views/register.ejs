
<%- include('partials/header') %>  


<div class="w-full min-h-screen bg-zinc-300 bg-cover bg-center flex items-center justify-center px-4 py-10">
  <div class="w-full max-w-sm bg-white px-6 py-8 rounded-[30px] shadow-lg">
    <h1 class="text-2xl sm:text-3xl mb-8 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">
      Create new account.
    </h1>
    <form action="/register" method="post">
      <input class="block border-2 rounded-md w-full mt-2 px-3 py-2" type="text" name="username" placeholder="Username">
      <input class="block border-2 rounded-md w-full mt-2 px-3 py-2" type="text" name="name" placeholder="Name">
      <input class="block border-2 rounded-md w-full mt-2 px-3 py-2" type="email" name="email" placeholder="Email">
      <input class="block border-2 rounded-md w-full mt-2 px-3 py-2" type="password" name="password" placeholder="Password">
      <input class="block border-2 rounded-md w-full mt-2 px-3 py-2" type="number" name="contact" placeholder="Contact">
      <input class="block border-2 mt-4 px-3 py-2 bg-red-600 text-white rounded-full w-full cursor-pointer" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-6 text-center">
        By continuing you agree to Pinterest's<br>
        Terms of Service and acknowledge you've read the Privacy Policy notice at collection.
      </p>
    </form>
    <a class="inline-block mt-6 text-sm font-semibold text-zinc-700 text-center w-full" href="/">
      Already a member? Login
    </a>
  </div>
</div>



<%- include('partials/footer') %>